<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="14sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/searchHint"
        />

    <RadioGroup
        android:id="@+id/typeOfTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:orientation="horizontal"
        android:gravity="center"
        android:checkedButton="@id/CelciusButton">
        <RadioButton android:id="@+id/FahrenheitButton"
            android:text="@string/fahrenheitButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
           />
        <RadioButton android:id="@+id/CelciusButton"
            android:text="@string/celciusButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/r_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>